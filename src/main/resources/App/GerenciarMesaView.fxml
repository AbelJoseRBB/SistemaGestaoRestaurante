<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="App.Controllers.GerenciarMesaController" prefHeight="400.0" prefWidth="350.0">
    <top>
        <Label fx:id="labelTituloMesa" text="Gerenciando Mesa X" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-padding: 15;" />
    </top>

    <center>
        <VBox spacing="10" style="-fx-padding: 0 15 15 15;">
            <Label text="Comandas Abertas:" />
            <ListView fx:id="listaComandas" prefHeight="250.0" />

            <Button onAction="#abrirComandaSelecionada" text="Abrir Comanda Selecionada" maxWidth="Infinity" />
        </VBox>
    </center>

    <bottom>
        <VBox style="-fx-padding: 15; -fx-background-color: #f4f4f4;">
            <Button onAction="#adicionarNovaComanda" text="[+] Adicionar Nova Comanda" maxWidth="Infinity" style="-fx-font-size: 14px; -fx-font-weight: bold;" />
        </VBox>
    </bottom>
</BorderPane>